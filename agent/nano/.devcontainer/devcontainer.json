{
    "name": "Nano ML Container (CPU)",
    "build": {
        "dockerfile": "../dockerfile.nano.req",
        "context": ".."
    },
    "runArgs": [
        "--network=host",
        "-v",
        "/run/user/$(id -u)/pulse:/tmp/pulse",
        "-e",
        "PULSE_SERVER=unix:/tmp/pulse/native"
    ],
    "mounts": [
        "source=${localWorkspaceFolder},target=/workspace,type=bind",
        "source=/mnt/vmstore,target=/mnt/vmstore,type=bind"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter"
            ]
        }
    },
    "remoteUser": "nano",
    "overrideCommand": true,
    "portsAttributes": {
        "8000": {
            "label": "FastAPI",
            "onAutoForward": "openBrowser"
        },
        "8888": {
            "label": "Jupyter",
            "onAutoForward": "openBrowser"
        }
    },
    "postStartCommand": "python3 /usr/local/bin/fastapi_app.py"
}
