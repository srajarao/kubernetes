{
    "name": "ML Container v8 (Final)",
    "build": {
        "dockerfile": "../dockerfile.online.req.backup",
        "context": ".."
    },
    "runArgs": [
        "--gpus=all",
        "--runtime=nvidia",
        "--device=/dev/video0",
        "--device=/dev/snd",
        "--network=host",
        "-v",
        "/run/user/$(id -u)/pulse:/tmp/pulse",
        "-e",
        "PULSE_SERVER=unix:/tmp/pulse/native"
    ],
    "mounts": [
        "source=${localWorkspaceFolder},target=/workspace,type=bind",
        "source=/mnt/vmstore,target=/mnt/vmstore,type=bind"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter"
            ]
        }
    },
    "remoteUser": "root",
    "overrideCommand": true,
    "portsAttributes": {
        "8889": {
            "label": "Jupyter",
            "onAutoForward": "openBrowser"
        }
    },
    "postStartCommand": "./run-post-start.sh"
}
